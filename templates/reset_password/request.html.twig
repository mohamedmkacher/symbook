

{% block stylesheets %}
    <style>
        :root {
            --primary: #9333ea;
            --primary-dark: #7e22ce;
            --primary-light: #c084fc;
            --dark: #0f172a;
            --dark-soft: #1e293b;
            --light: #f8fafc;
            --gray: #64748b;
            --gray-light: #94a3b8;
            --success: #10b981;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1);
            --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.2), 0 4px 6px -2px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --border-radius: 0.5rem;
            --border-radius-lg: 0.75rem;
        }

        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: var(--dark);
            padding: 2rem;
        }

        .auth-card {
            background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.8) 100%);
            border-radius: var(--border-radius-lg);
            padding: 2.5rem;
            box-shadow: var(--shadow-md);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            width: 100%;
            max-width: 400px;
        }

        .auth-title {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 1.75rem;
            text-align: center;
            margin-bottom: 1.5rem;
            background: linear-gradient(135deg, var(--light) 0%, var(--gray-light) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .auth-form {
            margin-top: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--gray-light);
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: var(--border-radius);
            background-color: rgba(15, 23, 42, 0.5);
            color: var(--light);
            font-size: 0.875rem;
            transition: var(--transition);
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(147, 51, 234, 0.2);
            background-color: rgba(30, 41, 59, 0.7);
        }

        .auth-button {
            width: 100%;
            padding: 0.875rem;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: var(--light);
            border: none;
            border-radius: var(--border-radius);
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow);
            margin-top: 0.5rem;
        }

        .auth-button:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md), 0 0 10px rgba(147, 51, 234, 0.3);
        }

        .auth-link {
            color: var(--primary-light);
            text-decoration: none;
            font-size: 0.875rem;
            transition: var(--transition);
            display: block;
            text-align: center;
            margin-top: 1rem;
        }

        .auth-link:hover {
            color: var(--light);
            text-decoration: underline;
        }

        .auth-text {
            text-align: center;
            margin-top: 1.5rem;
            color: var(--gray-light);
            font-size: 0.875rem;
        }

        .auth-alert {
            padding: 0.875rem;
            border-radius: var(--border-radius);
            margin-bottom: 1.5rem;
            font-size: 0.875rem;
        }

        .alert-success {
            background-color: rgba(16, 185, 129, 0.2);
            color: #ecfdf5;
            border-left: 4px solid var(--success);
        }

        .form-footer {
            margin-top: 1.5rem;
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="auth-card">
            <h1 class="auth-title">Réinitialisation du mot de passe</h1>

            {% for message in app.flashes('success') %}
                <div class="auth-alert alert-success">{{ message }}</div>
            {% endfor %}

            <div class="auth-form">
                {{ form_start(requestForm) }}
                <div class="form-group">
                    {{ form_label(requestForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(requestForm.email, {'attr': {'class': 'form-input', 'placeholder': 'Votre adresse email'}}) }}
                    {{ form_errors(requestForm.email) }}
                </div>

                <button type="submit" class="auth-button">
                    Envoyer le lien de réinitialisation
                </button>
                {{ form_end(requestForm) }}
            </div>

            <div class="form-footer">
                <a href="{{ path('app_login') }}" class="auth-link">Retour à la connexion</a>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'client/base_client.html.twig' %}

{% block client_title %}Bienvenue sur Symbook{% endblock %}

{% block client_body %}
    <!-- Hero Section -->
    <section class="hero-section bg-light py-5 mb-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-4 fw-bold mb-3">Découvrez notre collection de livres</h1>
                    <p class="lead mb-4">Des milliers de livres disponibles pour tous les goûts et tous les âges.</p>
                    <a href="{{ path('app_client_livre_index') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-book-open me-2"></i> Parcourir le catalogue
                    </a>
                </div>
                <div class="col-md-6">
                    <img src="{{ asset('img.png') }}" alt="Collection de livres" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </section>

    <!-- Nouveautés -->
    <section class="mb-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4"><i class="fas fa-star me-2 text-warning"></i> Nos nouveautés</h2>
                <a href="{{ path('app_client_livre_index') }}" class="btn btn-sm btn-outline-primary">
                    Voir tout <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>

            <div class="row">
                {% for livre in nouveautes %}
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <img src="{{ livre.image }}" class="card-img-top" alt="{{ livre.titre }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ livre.titre|u.truncate(20, '...') }}</h5>
                                <p class="card-text text-muted small">{{ livre.categorie.libelle }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold text-primary">{{ livre.prix}} DTN</span>
                                    <a href="{{ path('app_client_panier_add', {'id': livre.id}) }}"
                                       class="btn btn-sm btn-outline-primary" title="Ajouter au panier">
                                        <i class="fas fa-cart-plus"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Best-sellers -->
    <section class="mb-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4"><i class="fas fa-fire me-2 text-danger"></i> Best-sellers</h2>
                <a href="{{ path('app_client_livre_index') }}" class="btn btn-sm btn-outline-primary">
                    Voir tout <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>

            <div class="row">
                {% for livre in bestSellers %}
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                N°{{ loop.index }}
                            </span>
                            <img src="{{ livre.livre.image }}" class="card-img-top" alt="{{ livre.livre.titre }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ livre.livre.titre|u.truncate(20, '...') }}</h5>
                                <p class="card-text text-muted small">{{ livre.livre.categorie.libelle }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold text-primary">{{ livre.livre.prix }} DTN</span>
                                    <a href="{{ path('app_client_panier_add', {'id': livre.livre.id}) }}"
                                       class="btn btn-sm btn-outline-primary" title="Ajouter au panier">
                                        <i class="fas fa-cart-plus"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Catégories -->
    <section class="mb-5">
        <div class="container">
            <h2 class="h4 mb-4"><i class="fas fa-tags me-2 text-info"></i> Nos catégories</h2>

            <div class="row">
                {% for categorie in categories %}
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <div class="icon-lg bg-info bg-opacity-10 text-info rounded-circle mb-3">
                                    <i class="fas fa-tag"></i>
                                </div>
                                <h5 class="card-title">{{ categorie.libelle }}</h5>
                                <p class="card-text text-muted small">{{ categorie.description|u.truncate(50, '...') }}</p>
                                <a href="{{ path('app_client_categorie_show', {'slug': categorie.slug}) }}"
                                   class="btn btn-sm btn-outline-info">
                                    Voir les livres
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="bg-primary text-white py-5">
        <div class="container text-center">
            <h2 class="mb-4">Prêt à commencer votre lecture ?</h2>
            <p class="lead mb-4">Inscrivez-vous pour bénéficier de nos offres exclusives.</p>
            <a href="#" class="btn btn-light btn-lg me-2">
                <i class="fas fa-user-plus me-2"></i> S'inscrire
            </a>
            <a href="{{ path('app_client_livre_index') }}" class="btn btn-outline-light btn-lg">
                <i class="fas fa-book me-2"></i> Voir le catalogue
            </a>
        </div>
    </section>
{% endblock %}
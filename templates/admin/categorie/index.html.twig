{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enable Bootstrap tooltips with custom styling
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    placement: 'top',
                    boundary: document.body,
                    template: '<div class="tooltip" role="tooltip"><div class="tooltip-arrow"></div><div class="tooltip-inner" style="background-color: rgba(147, 51, 234, 0.9); box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);"></div></div>'
                });
            });

            // Initialize delete modal
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

            // Function to prepare delete modal
            window.prepareDelete = function(categoryId, categoryTitle) {
                event.preventDefault();
                document.getElementById('categoryTitle').textContent = categoryTitle;
                document.getElementById('confirmDelete').href = "{{ path('app_admin_categorie_delete', {'id': 'CATEGORY_ID'}) }}".replace('CATEGORY_ID', categoryId);
                deleteModal.show();
            };

            // Search functionality with debounce and animation
            const searchInput = document.getElementById('categorySearch');
            const table = document.getElementById('categoriesTable');

            let searchTimeout;

            if (searchInput && table) {
                searchInput.addEventListener('input', function() {
                    clearTimeout(searchTimeout);

                    searchTimeout = setTimeout(() => {
                        const searchTerm = this.value.toLowerCase();
                        const rows = table.querySelectorAll('tbody tr');

                        rows.forEach(row => {
                            const text = row.textContent.toLowerCase();
                            if (text.includes(searchTerm)) {
                                row.style.display = '';
                                row.classList.add('slide-in');
                                setTimeout(() => {
                                    row.classList.remove('slide-in');
                                }, 500);
                            } else {
                                row.style.display = 'none';
                            }
                        });
                    }, 300);
                });
            }

            // Book count filter with animation
            const bookCountFilter = document.getElementById('bookCountFilter');
            if (bookCountFilter && table) {
                bookCountFilter.addEventListener('change', function() {
                    const filterValue = this.value;
                    const rows = table.querySelectorAll('tbody tr');

                    rows.forEach(row => {
                        row.classList.remove('slide-in');
                        const bookCountText = row.querySelector('.category-badge').textContent;
                        const bookCount = parseInt(bookCountText) || 0;

                        if (filterValue === '') {
                            row.style.display = '';
                            row.classList.add('slide-in');
                        } else if (filterValue === '0' && bookCount === 0) {
                            row.style.display = '';
                            row.classList.add('slide-in');
                        } else if (filterValue === '1-10' && bookCount >= 1 && bookCount <= 10) {
                            row.style.display = '';
                            row.classList.add('slide-in');
                        } else if (filterValue === '11+' && bookCount > 10) {
                            row.style.display = '';
                            row.classList.add('slide-in');
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }

            // Add subtle parallax effect to dashboard header
            const dashboardHeader = document.querySelector('.dashboard-header');
            if (dashboardHeader) {
                window.addEventListener('scroll', function() {
                    const scrollPosition = window.scrollY;
                    if (scrollPosition < 500) {
                        dashboardHeader.style.backgroundPosition = `center ${scrollPosition * 0.4}px`;
                    }
                });
            }

            // Add subtle glow effect to action buttons on hover
            const actionButtons = document.querySelectorAll('.action-btn');
            actionButtons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.boxShadow = '0 0 15px rgba(147, 51, 234, 0.5), 0 4px 8px rgba(0, 0, 0, 0.3)';
                });

                button.addEventListener('mouseleave', function() {
                    this.style.boxShadow = '';
                });
            });

            // Add subtle animation to stat cards on scroll
            const statCards = document.querySelectorAll('.stat-card');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            statCards.forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(card);
            });

            // Add subtle text shadow to titles on hover
            const categoryTitles = document.querySelectorAll('.category-title');
            categoryTitles.forEach(title => {
                title.addEventListener('mouseenter', function() {
                    this.style.textShadow = '0 0 8px rgba(147, 51, 234, 0.3)';
                });

                title.addEventListener('mouseleave', function() {
                    this.style.textShadow = 'none';
                });
            });
        });
    </script>

{% extends 'admin/base_admin.html.twig' %}

{% block title %}Gestion des Commandes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Reusing admin theme variables */
        :root {
            --primary: #9333ea;
            --primary-dark: #7e22ce;
            --primary-light: #c084fc;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --dark: #0f172a;
            --dark-soft: #1e293b;
            --dark-lighter: #334155;
            --light: #f8fafc;
            --gray: #64748b;
            --gray-light: #94a3b8;
            --gray-dark: #475569;
            --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.1);
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1);
            --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.2), 0 4px 6px -2px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.2), 0 10px 10px -5px rgba(0, 0, 0, 0.1);
            --shadow-glow: 0 0 15px rgba(147, 51, 234, 0.5);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --transition-bounce: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
            --border-radius: 0.5rem;
            --border-radius-lg: 0.75rem;
            --border-radius-full: 9999px;
        }

        /* En-tête de tableau de bord avec effet de profondeur */
        .dashboard-header {
            background: linear-gradient(135deg, var(--dark-soft) 0%, var(--dark) 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2.5rem;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='rgba(255,255,255,0.05)' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.5;
            z-index: 0;
        }

        .dashboard-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg,
            rgba(147, 51, 234, 0),
            rgba(147, 51, 234, 0.5),
            rgba(147, 51, 234, 0)
            );
        }

        .dashboard-title {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 0.75rem;
            position: relative;
            letter-spacing: -0.02em;
            background: linear-gradient(135deg, var(--light) 0%, var(--gray-light) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
            z-index: 1;
        }

        .dashboard-subtitle {
            font-family: 'Montserrat', sans-serif;
            opacity: 0.9;
            margin-bottom: 0;
            position: relative;
            font-weight: 300;
            font-size: 1.1rem;
            max-width: 600px;
            color: var(--gray-light);
            z-index: 1;
        }

        /* Conteneur principal avec effet de profondeur */
        .content-container {
            padding: 0 1.5rem 2.5rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Card and Table Styling */
        .card {
            background: transparent; /* Remove white background */
            border: none;
            box-shadow: none;
        }

        .table-responsive {
            background: transparent; /* Remove white background */
            border: none;
        }

        .order-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background: rgba(15, 23, 42, 0.5);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow);
            border: 1px solid rgba(255, 255, 255, 0.05);
            font-family: 'Montserrat', sans-serif;
        }

        .order-table thead {
            background: linear-gradient(135deg, var(--dark-soft) 0%, var(--dark) 100%);
        }

        .order-table th {
            padding: 1rem;
            font-family: 'Playfair Display', serif;
            font-weight: 600;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--light);
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .order-table tbody tr {
            background: rgba(30, 41, 59, 0.8);
            transition: var(--transition-bounce);
            position: relative;
        }

        .order-table tbody tr:hover {
            transform: translateY(-4px) scale(1.01);
            background: rgba(30, 41, 59, 0.9);
            box-shadow: var(--shadow-md), 0 0 10px rgba(147, 51, 234, 0.3);
        }

        .order-table tbody tr::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, rgba(147, 51, 234, 0), rgba(147, 51, 234, 0.5), rgba(147, 51, 234, 0));
            opacity: 0;
            transition: var(--transition);
        }

        .order-table tbody tr:hover::after {
            opacity: 1;
        }

        .order-table td {
            padding: 1rem;
            font-size: 0.875rem;
            font-weight: 400;
            color: var(--gray-light);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            transition: var(--transition);
        }

        .order-table tbody tr:hover td {
            color: var(--light);
        }

        /* Status Badges */
        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: var(--border-radius-full);
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            transition: var(--transition-bounce);
            font-family: 'Montserrat', sans-serif;
        }

        .status-badge.bg-success {
            background: linear-gradient(135deg, var(--success) 0%, darken(var(--success), 10%) 100%);
            box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3);
        }

        .status-badge.bg-warning {
            background: linear-gradient(135deg, var(--warning) 0%, darken(var(--warning), 10%) 100%);
            box-shadow: 0 2px 4px rgba(245, 158, 11, 0.3);
        }

        .status-badge:hover {
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3), 0 0 10px rgba(147, 51, 234, 0.3);
        }

        /* Action Buttons */
        .action-btn {
            padding: 0.5rem 1rem;
            border-radius: var(--border-radius-full);
            font-size: 0.875rem;
            font-weight: 600;
            transition: var(--transition-bounce);
            text-align: center;
            position: relative;
            overflow: hidden;
            font-family: 'Montserrat', sans-serif;
        }

        .action-btn::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0));
            transform: rotate(30deg);
            transition: var(--transition);
        }

        .action-btn:hover::after {
            transform: rotate(30deg) translate(10%, 10%);
        }

        .view-btn {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            border: none;
            box-shadow: 0 2px 4px rgba(147, 51, 234, 0.3);
        }

        .delete-btn {
            background: linear-gradient(135deg, var(--danger) 0%, darken(var(--danger), 10%) 100%);
            color: white;
            border: none;
            box-shadow: 0 2px 4px rgba(239, 68, 68, 0.3);
        }

        .action-btn:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3), 0 0 10px rgba(147, 51, 234, 0.3);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 2rem;
            font-family: 'Montserrat', sans-serif;
            color: var(--gray-light);
            font-size: 1rem;
            font-weight: 400;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .dashboard-header {
                padding: 2rem 0;
            }

            .dashboard-title {
                font-size: 1.75rem;
            }

            .order-table th,
            .order-table td {
                padding: 0.75rem;
                font-size: 0.75rem;
            }

            .action-btn {
                padding: 0.4rem 0.8rem;
                font-size: 0.75rem;
            }
        }
    </style>
{% endblock %}

{% block admin_body %}
    <nav class="admin-navbar">
        <div class="navbar-container">
            <a href="{{ path('app_admin_dashboard') }}" class="navbar-brand">
                <div class="navbar-logo">
                    <i class="fas fa-book"></i>
                </div>
                <div>
                    <h1 class="navbar-title">BiblioTech</h1>
                </div>
            </a>

            <div class="navbar-menu">
                <div class="navbar-item">
                    <a href="{{ path('app_admin_dashboard') }}" class="navbar-link">
                        <i class="fas fa-tachometer-alt me-1"></i> Dashboard
                    </a>
                </div>
                <div class="navbar-item">
                    <a href="{{ path('app_admin_livre_all') }}" class="navbar-link">
                        <i class="fas fa-book-open me-1"></i> Livres
                    </a>
                </div>
                <div class="navbar-item">
                    <a href="{{ path('app_admin_categorie_all') }}" class="navbar-link">
                        <i class="fas fa-tags me-1"></i> Catégories
                    </a>
                </div>
                <div class="navbar-item">
                    <a href="#" class="navbar-link">
                        <i class="fas fa-users me-1"></i> Utilisateurs
                    </a>
                </div>
                <div class="navbar-item">
                    <a href="{{ path('app_admin_commande_index') }}" class="navbar-link active">
                        <i class="fas fa-shopping-cart me-1"></i> Commandes
                    </a>
                </div>
            </div>

            <div class="navbar-user">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <p class="user-name">Admin</p>
                    <p class="user-role">Administrateur</p>
                </div>
                <div class="navbar-dropdown">
                    <button class="dropdown-toggle">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- En-tête du Tableau de Bord avec Effet de Profondeur -->
    <header class="dashboard-header">
        <div class="container">
            <h1 class="dashboard-title">Gestion des Commandes</h1>
            <p class="dashboard-subtitle">Gérez les commandes avec efficacité et clarté. Suivez, mettez à jour ou supprimez les commandes en toute simplicité.</p>
        </div>
    </header>

    <div class="container content-container">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="order-table">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Client</th>
                            <th>Total</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for commande in commandes %}
                            <tr>
                                <td>{{ commande.id }}</td>
                                <td>{{ commande.date|date('d/m/Y H:i') }}</td>
                                <td>{{ commande.panier.user.email }}</td>
                                <td>{{ commande.total|format_currency('EUR') }}</td>
                                <td>
                                    <span class="badge bg-{{ commande.panier.etat_panier == 'VALIDE' ? 'success' : 'warning' }}">
                                        {{ commande.panier.etat_panier == 'VALIDE' ? 'Expédiée' : 'En traitement' }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('app_admin_commande_show', {'id': commande.id}) }}"
                                       class="action-btn view-btn" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_commande_delete', {'id': commande.id}) }}"
                                          class="d-inline" onsubmit="return confirm('Supprimer cette commande ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                                        <button class="action-btn delete-btn" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="empty-state">Aucune commande trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
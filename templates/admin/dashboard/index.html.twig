{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation des stat cards lors du défilement
            const statCards = document.querySelectorAll('.stat-card');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            statCards.forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(card);
            });

            // Animation des lignes de tableau et éléments de liste
            const tableRows = document.querySelectorAll('.dashboard-table tbody tr');
            const listItems = document.querySelectorAll('.list-group-item');

            const animateItems = (items) => {
                items.forEach(item => {
                    item.style.opacity = '0';
                    item.style.transform = 'translateX(-20px)';
                    item.style.transition = 'opacity 0.4s ease, transform 0.4s ease';
                    observer.observe(item);
                });
            };

            animateItems(tableRows);
            animateItems(listItems);

            // Effet de survol sur les lignes de tableau
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.boxShadow = '0 4px 8px rgba(147, 51, 234, 0.3)';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.boxShadow = 'none';
                });
            });

            // Effet de survol sur les éléments de liste
            listItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.boxShadow = '0 4px 8px rgba(147, 51, 234, 0.3)';
                });
                item.addEventListener('mouseleave', function() {
                    this.style.boxShadow = 'none';
                });
            });

            // Recherche dans les commandes
            const searchInput = document.getElementById('dashboardSearch');
            const ordersTable = document.getElementById('ordersTable');

            if (searchInput && ordersTable) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = ordersTable.querySelectorAll('tbody tr');

                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        if (text.includes(searchTerm)) {
                            row.style.display = '';
                            row.classList.add('slide-in');
                            setTimeout(() => {
                                row.classList.remove('slide-in');
                            }, 500);
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }

            // Filtre par période
            const timeFilter = document.getElementById('timeFilter');
            if (timeFilter && ordersTable) {
                timeFilter.addEventListener('change', function() {
                    const filter = this.value;
                    const rows = ordersTable.querySelectorAll('tbody tr');

                    rows.forEach(row => {
                        row.classList.remove('slide-in');
                        row.style.display = filter === '' ? '' : 'none';
                        if (filter === '') {
                            row.classList.add('slide-in');
                        }
                    });
                });
            }

            // Effet de survol sur les liens de la navbar
            const navbarLinks = document.querySelectorAll('.navbar-link');
            navbarLinks.forEach(link => {
                link.addEventListener('mouseenter', function() {
                    this.style.textShadow = '0 0 8px rgba(147, 51, 234, 0.5)';
                });
                link.addEventListener('mouseleave', function() {
                    this.style.textShadow = 'none';
                });
            });
        });
    </script>
{% endblock %}